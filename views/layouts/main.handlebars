.container {
  max-width: 95%;
  margin: 0 auto;
  font-family: "Arial";
}

img {
  max-width: 100%;
  max-height: 100%;
}

button.primary {
  background-color: gray;
}

.temas {
  border: solid 1px red;
}

.temas > div {
  text-align: center;
  width: 100%;
  background-color: lightblue;
  padding: 10px 20px;
  box-sizing: border-box;
}

.ALIN {
  text-align: center;
}

.clearfix::after {
  content: "";
  display: table;
  clear: both;
}
    </style>
</head>
<body>
    <header id="header"></header>
    <div class="container">
        <div class="topnav">
            <h2>Búsqueda de noticias:</h2>
            <input type="text" placeholder="Noticias.." id="barra">
            <button type="button" id="boton">Buscar:</button>
        </div>
        <div class="grid clearfix" id="grid">
        {{#each noticias}}
            <div class="col-3 tb-col-6 mb-col-8 ALIN">
                <img src="{{urlToImage}}" />
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <a href="{{url}}" target="_blank">Ver más</a>
            </div>
        {{/each}}
        </div>
        
    </div>
        <footer>&copy; ITESO</footer>
    </div>
</body>
